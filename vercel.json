{
  "version": 2,
  "buildCommand": "NODE_OPTIONS=--openssl-legacy-provider npm run build",
  "outputDirectory": "pitch",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": null,
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/pitch/static/$1"
    },
    {
      "source": "/favicon.ico",
      "destination": "/pitch/favicon.ico"
    },
    {
      "source": "/favicon.svg",
      "destination": "/pitch/favicon.svg"
    },
    {
      "source": "/robots.txt",
      "destination": "/pitch/robots.txt"
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))$",
      "destination": "/pitch/$1"
    },
    {
      "source": "/",
      "destination": "/pitch/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/pitch/index.html"
    }
  ]
}
