{
  "version": 2,
  "builds": [
    {
      "src": "pitch/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/pitch/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/manifest.json",
      "dest": "/pitch/manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "/pitch/favicon.ico"
    },
    {
      "src": "/favicon.svg",
      "dest": "/pitch/favicon.svg"
    },
    {
      "src": "/(.*)",
      "dest": "/pitch/index.html"
    }
  ]
}
