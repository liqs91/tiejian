{
  "version": 2,
  "buildCommand": "NODE_OPTIONS=--openssl-legacy-provider npm run build",
  "outputDirectory": "pitch",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": null,
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/manifest.json",
      "destination": "/pitch/manifest.json"
    },
    {
      "source": "/favicon.ico",
      "destination": "/pitch/favicon.ico"
    },
    {
      "source": "/static/(.*)",
      "destination": "/pitch/static/$1"
    },
    {
      "source": "/",
      "destination": "/pitch/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/pitch/index.html"
    }
  ]
}
