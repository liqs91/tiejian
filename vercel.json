{
  "version": 2,
  "outputDirectory": "pitch",
  "installCommand": "echo 'No install needed'",
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/pitch/static/$1"
    },
    {
      "source": "/manifest.json",
      "destination": "/pitch/manifest.json"
    },
    {
      "source": "/favicon.ico",
      "destination": "/pitch/favicon.ico"
    },
    {
      "source": "/favicon.svg",
      "destination": "/pitch/favicon.svg"
    },
    {
      "source": "/img/(.*)",
      "destination": "/pitch/img/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/pitch/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
