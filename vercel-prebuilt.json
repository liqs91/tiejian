{
  "version": 2,
  "buildCommand": "cp -r pitch/* . && cp pitch/.* . 2>/dev/null || true",
  "outputDirectory": ".",
  "installCommand": "echo 'No install needed'",
  "rewrites": [
    {
      "source": "/service-api/(.*)",
      "destination": "http://110.40.176.144:8001/service-api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
